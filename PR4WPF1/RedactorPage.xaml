<Page x:Class="PR4WPF1.RedactorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR4WPF1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RedactorPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="1"></TextBox>
        <DataGrid Grid.Column="0" x:Name="Tabl"></DataGrid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Grid.Row="6" x:Name="Add" Content="Добавить" Click="Add_Click"></Button>
            <TextBox Grid.Row="0" x:Name="Text1"></TextBox>
            <TextBox Grid.Row="1" x:Name="Text2"></TextBox>
            <TextBox Grid.Row="2" x:Name="Text3"></TextBox>
            <TextBox Grid.Row="3" x:Name="Text4"></TextBox>
            <TextBox Grid.Row="4" x:Name="Text5"></TextBox>
        </Grid>
    </Grid>
</Page>
