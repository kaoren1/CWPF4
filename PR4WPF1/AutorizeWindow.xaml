<Window x:Class="PR4WPF1.AutorizeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PR4WPF1"
        mc:Ignorable="d"
        Title="AutorizeWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Exit" Content="Выйти" Grid.Column="0" Click="Exit_Click"></Button>
            <Button x:Name="Redactor" Content="Редактор текста" Grid.Column="1" Click="Redactor_Click"></Button>
            <Button x:Name="GoTest" Content="Пройти тест" Grid.Column="2" Click="GoTest_Click"></Button>
        </Grid>
        <Frame x:Name="PageFrame" Grid.Row="1"></Frame>
    </Grid>
</Window>
