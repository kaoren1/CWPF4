<Page x:Class="PR4WPF1.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR4WPF1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="Text1" Grid.Row="0"></TextBlock>
        <TextBlock x:Name="Text2" Grid.Row="1"></TextBlock>
        <Button Grid.Row="2" x:Name="Button1"></Button>
        <Button Grid.Row="3" x:Name="Button2"></Button>
        <Button Grid.Row="4" x:Name="Button3"></Button>
    </Grid>
</Page>
